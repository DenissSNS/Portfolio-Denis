---
import "./lastPost.scss"

import FormattedDate from '../FormattedDate.astro';

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const lastPost = posts[0]

---	
	
<a href={`/${lastPost.slug}`} class="lastPost">
	

	<div class="img-type">
		<img src={lastPost.data.heroImage} alt="img" class="main-img"/>
		<span class="newPost">ðŸ”¥{t('lastPost.last')}</span>
		<span class={`type ${lastPost.data.type.toLowerCase()}`}>{lastPost.data.type.toUpperCase()}</span>
	</div>

	<div class="text">
		<span class="date">
			Â· <FormattedDate date={lastPost.data.pubDate} />
		</span>
		<h3 class="title">{lastPost.data.title}</h3>
		<p class="desc">
			{lastPost.body}
		</p>
		<div class="bottom">
			<span class="tags">{lastPost.data.tags}</span>
			<img class="right svg-a-colorier" src="/icons/main-arrow.svg" alt="arrow" width="16" height="15" />
		</div>
	</div>
</a>

