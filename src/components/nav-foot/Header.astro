---
import HeaderLink from './HeaderLink.astro';
import ToggleDarkLight from './ToggleDarkLight.astro';
import ToggleLanguage from './ToggleLanguage.astro';

import { SITE_TITLE } from '../../consts';

import "./header.scss"

import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header>
	<nav>
		<h4><a href={`/${lang}`}>{SITE_TITLE}</a></h4>
		<div class="internal-links">
			<HeaderLink href={`/${lang}/contact`}>{t('nav.contact')}</HeaderLink>
			<HeaderLink href={`/${lang}/live`}>{t('nav.live')}</HeaderLink>
		</div>
		<div class="toggles">
			<ToggleDarkLight />
			<ToggleLanguage />
		</div>
	</nav>
</header>
