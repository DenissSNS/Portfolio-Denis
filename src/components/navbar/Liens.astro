import "./liens.scss"

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<script>

	const liens = document.querySelectorAll('[data-allLiens]');
	const buttonHeader = document.querySelector('[data-buttonHeader]');

	buttonHeader?.addEventListener("click", () =>
		liens.forEach(eachLien => {
			eachLien.classList.toggle("visible");
		})
	);

// ---

	var box1 = document.querySelector('.box1');
	var box2 = document.querySelector('.box2');

	document.addEventListener('click', (event) => {
    if (event.target !== box1 && event.target !== box2){
			liens.forEach(eachLien => {
				eachLien.classList.remove("visible");
			})
		}
  });

</script>

