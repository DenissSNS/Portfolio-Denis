---
import "./liens.scss"

import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<script>

	const liens = document.querySelectorAll('[data-allLiens]');
	const buttonHeader = document.querySelector('[data-buttonHeader]');

	buttonHeader?.addEventListener("click", () =>
		liens.forEach(eachLien => {
			eachLien.classList.toggle("visible");
		})
	);

// ---

	var box = document.querySelector('.box');

	document.addEventListener('click', (event) => {
    if (event.target !== box){
			liens.forEach(eachLien => {
				eachLien.classList.remove("visible");
			})
		}
  });

</script>

